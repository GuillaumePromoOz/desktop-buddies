{% extends 'base.html.twig' %}

{% block title %}Desktop Buddies{% endblock %}

{% block body %}

{% include '_nav.html.twig' %}

    <main class="container">
        <div class="card product-details" style="max-width: 2000px;">
            <div class="row no-gutters g-0">
                <div class="col-md-4">
                <img src="{{ asset('images/' ~ product.image) }}" class="product-image" alt="product-image">
                </div>
                <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title product-title">{{product.name}}</h5>
                    <p class="card-text product-text">{{product.description}}</p>
                    <p class="card-text product-price">Price:	{{ product.price|format_currency('EUR', locale='fr') }}</p>
                    <p class="card-text text-muted">+ cost of shipping & import fees</p>
                    
                    <!-- action sets the page where we fetch POST-->
                    <form action="{{ path('cart_add') }}" method="POST">
                     <!-- we fetch the ID that we passed to the render in the read method from ProductController-->
                        <input type="hidden" name="id" value="{{ id }}">
                        <!--<button type="submit" class="btn btn-info btn-lg btn-block product-button">Add to cart</button>-->
                        <button type="submit" class="btn btn-primary btn-lg mt-3">Add to cart</button>
                    </form>
                  
                    <a href="{{ path('categories_read', {id: product.category.id}) }}"><button type="button" class="btn btn-dark btn-lg mt-2">More products</button>
</a>
                </div>
                </div>
            </div>
        </div>
  </main>

{% endblock %}