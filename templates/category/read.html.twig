{% extends 'base.html.twig' %}

{% block title %}Desktop Buddies{% endblock %}

{% block body %}

{% include '_nav.html.twig' %}

    <!-- Category header -->
    <div class="container">
        <h2 class="category-header">{{ category.name }}</h2>
    </div>

   <main class="container">
    <div class="row">
     <!-- Product Card -->
     {% for product in category.products %} 
      <div class="col-6 col-sm-6 col-md-4 col-lg-3">
        <div class="card-group category-product-card">
          <div class="card">
            <a href="{{ path('products_read', {id: product.id}) }}">
              <img class ="category-product-image" src="{{ asset('images/' ~ product.image) }}" alt="product-image"/>
              <div class="card-body">
                {% if status is defined and product.status == 3 %}
                <h5><span class="badge badge-primary mb-2">NEW</span></h5>
                <h5 class="card-title">{{ product.name }}</h5>
                <p class="card-text"><small class="text-muted">9.99$</small></p>
                <button type="button" class="btn btn-outline-warning btn-small mb-3">Details</button>
                {% else %}
                <h5 class="card-title">{{ product.name }}</h5>
                <p class="card-text"><small class="text-muted">9.99$</small></p>
                <button type="button" class="btn btn-outline-warning btn-small mb-3">Details</button>
                {% endif %}
            <a/>
              </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </main>

{% endblock %}
