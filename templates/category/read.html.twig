{% extends 'base.html.twig' %}

{% block title %}Desktop Buddies{% endblock %}

{% block body %}

{% include '_nav.html.twig' %}

    <!-- Header -->
    <header class="container">
        <h2 class="category-header">{{ category.name }}</h2>
    </header>

   <main class="container">
    <div class="row">
     <!-- Product Card -->
     {% for product in category.products %} 
      <div class="col-6 col-sm-6 col-md-4 col-lg-3">
        <div class="card-group product-card">
          <div class="card">
            <a href="{{ path('products_read', {id: product.id}) }}">
              <img class ="product-image" src="{{ asset('images/' ~ product.image) }}" alt="product-image"/>
              <div class="card-body">
                <button type="button" class="btn btn-outline-warning btn-small mb-3">Details</button>
            <a/>
                <h5 class="card-title">{{ product.name }}</h5>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </main>

{% endblock %}
