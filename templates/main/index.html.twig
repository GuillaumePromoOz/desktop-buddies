{% extends 'base.html.twig' %}

{% block title %}Desktop Buddies{% endblock %}

{% block menuHome %}active{% endblock %}

{% block body %}

{% include '_nav.html.twig' %}

<main>

<!-- Search Result -->
  
  {% if app.request.query.get('search') is not null %}
  <h3>Search results for <i>"{{ app.request.query.get('search') }}"</i></h3>

  <div class="container search-container">
    <div class="row">
      
      <!-- Search Result Product Card -->
      {% for product in products %} 
      <div class="col-6 col-sm-6 col-md-4 col-lg-3">
        <div class="card-group home-product-card">
          <div class="card">
            <a href="{{ path('products_read', {id: product.id}) }}">
            <img class ="home-product-image" src="{{ asset('images/' ~ product.image) }}"/>
            <div class="card-body">
            <h5 class="card-title home-product-card__title">{{ product.name }}</h5>
            <a/>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>

  {% else %}
  <!-- carousel -->
  <div class="container carousel">
    <div class="row">
      <div class="col">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="{{ asset('css/images/slide1.png') }}" class="d-block w-100 carousel-image" alt="...">
          </div>
          <div class="carousel-item">
            <img src="{{ asset('css/images/slide2.png') }}" class="d-block w-100 carousel-image" alt="...">
          </div>
          <div class="carousel-item">
            <img src="{{ asset('css/images/slide3.png') }}" class="d-block w-100 carousel-image" alt="...">
          </div>
          <div class="carousel-item">
            <img src="{{ asset('css/images/slide4.png') }}" class="d-block w-100 carousel-image" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Sales banner -->
  <div class="container sales-container">
    <div class="row">
      <div class="col">  
        <img class ="home-product-image" src="{{ asset('css/images/freshbuddies.png') }}"/>
      </div>
    </div>
  </div>  
  

  
  <div class="container">
    <div class="row">
      <!-- Lastest Arrivals Product Card -->
      {% for newProduct in newProducts %} 
      <div class="col-6 col-sm-6 col-md-4 col-lg-3">
        <div class="card-group home-product-card">
          <div class="card">
            <a href="{{ path('products_read', {id: newProduct.id}) }}">
            <img class ="home-product-image" src="{{ asset('images/' ~ newProduct.image) }}"/>
            <div class="card-body">
            <h5><span class="badge badge-primary mb-2">NEW</span></h5>
            <h5 class="card-title home-product-card__title">{{ newProduct.name }}</h5>
            <a/>
              <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
            </div>
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}

</main>
{% endblock %}
